<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>

    <div id="title">
        <div></div><p>Today's</p>
    </div>
    <h2>Best Selling Products</h2>
    <section>
        
        <%for (let index = 0; index < products.length; index++) {%>

            <div class="cards">
    
                <div class="img">
                    <img src="<%= products[index].image %>" alt="foto do produto">
                </div>

                <div class="descricao">
                    <h5 class="texto-cortado"><%= products[index].description %></h5>
                    <p>$<%= products[index].price %></p>
                    
                    
                    <%if (products[index].rating.rate >= 1 && products[index].rating.rate < 1.5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 1.5 && products[index].rating.rate < 2) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-half"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 2 && products[index].rating.rate < 2.5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 2.5 && products[index].rating.rate < 3) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-half"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 3 && products[index].rating.rate < 3.5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 3.5 && products[index].rating.rate < 4) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-half"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 4 && products[index].rating.rate < 4.5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>

                    <%} else if (products[index].rating.rate >= 4.5 && products[index].rating.rate < 5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-half"></i>

                    <%} else if (products[index].rating.rate == 5) {%>
                        
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>

                    <%} else {%>
                        <h5>An error occurred!</h5>
                    <%}%>
                  

                </div>
            </div>


        <%}%>
        
    </section>
    
    <script src="/js/main.js"></script>
</body>
</html>


     